<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="15dp"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/bg_home_pro_shape">

    <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_icon"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    <TextView
            app:layout_constraintLeft_toRightOf="@+id/iv_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
            android:id="@+id/tv_name"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:layout_marginLeft="7dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
            android:id="@+id/tv_loan_time"
            android:layout_centerVertical="true"
            android:text="贷款次数10万"
            android:layout_marginLeft="7dp"
            android:textSize="12sp"
            android:textColor="#888888"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_home_pro_btn_shape"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            android:id="@+id/tv_btn_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:layout_marginLeft="7dp"
            android:textSize="12sp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintTop_toTopOf="@id/tv_btn_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_btn_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_amount"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="Rp 3000~2000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <!--第三行-->

    <TextView
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_btn_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_amount_des"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="Nominal Pinjaman"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_amount_des"
            app:layout_constraintBottom_toBottomOf="@id/tv_amount_des"
            android:id="@+id/tv_rate"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="0.01%/hari"
            android:layout_marginLeft="7dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginRight="4dp"
            android:includeFontPadding="false"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@id/tv_amount_des"
            app:layout_constraintBottom_toBottomOf="@id/tv_amount_des"
            app:layout_constraintRight_toLeftOf="@id/tv_rate"
            android:id="@+id/tv_rate_des"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="Bunga Harian"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/v_line"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_amount_des"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E9E9E9"/>

    <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line"
            android:id="@+id/tv_feature"
            android:gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:text="产品描述"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
